        "#funcion de potenciacion recursiva\n",
        "def potencia(n,p):\n",
        "\n",
        "  if p==0:\n",
        "\n",
        "    return 1\n",
        "\n",
        "  else:\n",
        "\n",
        "    return potencia(n,p-1)*n"
      ]
    }
